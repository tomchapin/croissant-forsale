<%= form_for(@item, html: {class: "form-horizontal"}) do |f| %>
    <%- Item.column_names.reject { |c| c.in? ['id', 'created_at', 'updated_at', 'sentence_id'] }.each do |field| %>
        <div class="form-group">
          <label class="control-label col-md-2">
            <%= f.label field, field.to_s.titleize %>
          </label>
          <div class="form-controls col-md-4">
            <%= f.text_field field, class: 'form-control' %>
          </div>
        </div>
    <%- end %>

    <div class="form-group">
      <div class="actions">
        <div class="col-md-offset-2 col-md-4">
          <%= f.submit 'Find Items for Sale', class: 'btn-create' %>
        </div>
      </div>
    </div>
<% end %>
